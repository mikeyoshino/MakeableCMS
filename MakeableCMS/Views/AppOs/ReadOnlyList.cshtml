@model IEnumerable<MakeableCMS.Models.AppOs>

@{
    ViewBag.Title = "Application OS";
}
<div class="header-create" style="width: 100%; height: 165px; background-color: #ffe4cc;">
    <div class="title" style="padding-top: 50px; padding-left: 20px;"><h2>Application Operation System</h2></div>
</div>

<div style="padding-top: 40px;">
    
    <h6>Add a new application operation system by clicking "Add Application OS" button located below.</h6>
    <h6>Controller are located at the end of collumn. You can edit and delete by clicking at these buttons.</h6>
    <br/>


    <table id="appOs" class="table table-hover table-bordered" style="width:100%">
        <thead class="table-dark">
            <tr>
                <th style="width: 100px;">@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>

                    <td>@Html.DisplayFor(modelItem => item.Name)</td>

                </tr>
            }
        </tbody>

    </table>
</div>


