                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PostDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UserfulRate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UserfulRate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.AppUrl)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AppUrl)
                </dd>
