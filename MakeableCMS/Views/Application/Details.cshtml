            <div class="container">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    Application Operation System
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AppOs.Name)
                </dd>

